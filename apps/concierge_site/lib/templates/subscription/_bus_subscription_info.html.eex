<%= unless Enum.empty?(@subscriptions) do %>
  <div class="bus-subscriptions">
    <h6>Bus</h6>
    <%= for subscription <- @subscriptions do %>
      <%= if @render_links do %>
        <%= link(to: bus_subscription_path(@conn, :edit, subscription), class: "subscription-link") do %>
          <div class="subscription">
            <div class="subscription-icon-container">
              <div class="bus-icon subscription-icon">
                <img src="<%= static_url(@conn, "/images/bus.svg") %>" />
              </div>
            </div>
            <%= subscription_info(subscription) %>
            <div class="subscription-edit-link">
              <i class="fa fa-chevron-right" aria-hidden="true"></i>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="subscription">
          <div class="subscription-icon-container">
              <div class="bus-icon subscription-icon">
                <img src="<%= static_url(@conn, "/images/bus.svg") %>" />
              </div>
            </div>
          <%= subscription_info(subscription) %>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
