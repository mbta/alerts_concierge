<div class="form-label <%= @action %>-alert-type">
  What kind of alerts would you like to receive?
</div>
<div class="priority-options <%= @action %>-form-section">
  <%= error_tag @form, :alert_priority_type %>
  <label class="priority-radio-option">
    <%= radio_button @form, :alert_priority_type, "high", checked: (@checked == :high) %>
    <div>
      <div>High-priority alerts only:</div>
      <div class="form-sub-label">
        Cancellations, station closures, shuttle buses
      </div>
    </div>
  </label>
  <div class="priority-option-divider"></div>
  <label class="priority-radio-option">
    <%= radio_button @form, :alert_priority_type, "medium", checked: (@checked == :medium) %>
    <div>
      <div>High- and medium-priority alerts:</div>
      <div class="form-sub-label">
        All high-priority alerts, plus delays
      </div>
    </div>
  </label>
  <div class="priority-option-divider"></div>
  <label class="priority-radio-option">
    <%= radio_button @form, :alert_priority_type, "low", checked: (@checked == :low) %>
    <div>
      <div>High-, medium-, and low-priority alerts:</div>
      <div class="form-sub-label">
        All high- and medium-priority alerts plus track changes
      </div>
    </div>
  </label>
</div>
